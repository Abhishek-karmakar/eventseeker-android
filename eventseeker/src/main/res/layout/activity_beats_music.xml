<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_ht"
        android:background="@android:color/black"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_ht"
            android:gravity="center"
            android:text="LOG IN TO BEATS MUSIC"
            android:textColor="@android:color/white"
            android:textSize="@dimen/abc_action_bar_title_text_size"
            android:textStyle="bold" />
    </LinearLayout>

    <WebView
        android:id="@+id/wbvBeatsMusicLogin"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include 
        android:id="@+id/prgBrLogin"
        layout="@layout/progress_bar_eventseeker" />
    
</LinearLayout>