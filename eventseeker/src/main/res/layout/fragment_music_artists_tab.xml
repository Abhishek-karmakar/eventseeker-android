                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lnr_root_padding_fragment_follow_more_artists"
                android:orientation="horizontal" >

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" >

                    <com.wcities.eventseeker.custom.view.ResizableImageView
                        android:id="@+id/imgAlternativeRock"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_alternative_rock" />

                    <Button
                        android:id="@+id/btnAlternativeRock"
                        style="@style/Widget.EventSeeker.Button.AlphaColorPrimary"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignBottom="@+id/imgAlternativeRock"
                        android:layout_alignTop="@+id/imgAlternativeRock"
                        android:gravity="center"
                        android:text="@string/btn_alternative_rock" />
                </RelativeLayout>

