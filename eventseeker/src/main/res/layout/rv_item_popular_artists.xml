<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wcities.eventseeker.custom.view.ResizableImageView
        android:id="@+id/imgAritstCategory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_featured" />

    <Button
        android:id="@+id/btnAritstCategory"
        style="@style/Widget.EventSeeker.Button.AlphaColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/imgAritstCategory"
        android:layout_alignLeft="@+id/imgAritstCategory"
        android:layout_alignRight="@+id/imgAritstCategory"
        android:layout_alignTop="@+id/imgAritstCategory"
        android:text="@string/btn_featured" />

</RelativeLayout>