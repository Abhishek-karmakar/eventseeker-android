<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <ImageView android:id="@+id/imgSplash"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/ic_loading_page_img_bg"
        android:scaleType="centerCrop" />

    <TextView android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/txt_app_name_margin_t_activity_splash"
        android:text="@string/eventseeker"
        android:textColor="@android:color/white"
        android:textSize="@dimen/txt_app_name_txt_size_activity_splash"
        android:textStyle="bold" />
        
</RelativeLayout>
