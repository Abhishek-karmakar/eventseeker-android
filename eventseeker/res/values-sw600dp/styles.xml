<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="SingleLineMarqueeTxt" parent="@android:style/TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:singleLine">true</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    
    <style name="SingleLineMarqueeTxtViewXtraPadding" parent="SingleLineMarqueeTxt">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="edtTxtWhiteColor" parent="@android:style/TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    
