<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="ThemeOverlay.EventSeeker.Dark.ActionBar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
    	<item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    	<item name="titleMarginStart">@dimen/action_bar_title_margin_start</item>
    	<!-- <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item> -->
    </style>
    
    <style name="SingleLineMarqueeTxt" parent="@android:style/TextAppearance.DeviceDefault.Widget.TextView">
        <item name="android:singleLine">true</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:ellipsize">marquee</item>
		<item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    
    <style name="SingleLineMarqueeTxtViewXtraPadding" parent="SingleLineMarqueeTxt">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>
    
    <style name="edtTxtWhiteColor" parent="@android:style/TextAppearance.DeviceDefault.Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>
    
    <style name="Widget.EventSeeker.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_btn_bg_primary</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="Widget.EventSeeker.ButtonRoundedCorner" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_btn_bg_primary_rounded_corners</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>
    
    <style name="Widget.EventSeeker.Button.Gray" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_btn_bg_gray</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="Widget.EventSeeker.Button.White" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_bg_curved_edges_white</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/txt_size_widget_eventSeeker_btn_white</item>
        <item name="android:minHeight">@dimen/btn_default_ht</item>
    </style>
    
    <style name="Widget.EventSeeker.Button.WhiteBgBlueStroke" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_bg_curved_edges_blue</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/txt_size_widget_eventSeeker_btn_white</item>
        <item name="android:minHeight">@dimen/btn_default_ht</item>
    </style>
    
    <style name="Widget.EventSeeker.Button.AlphaColorPrimary" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/slctr_btn_alpha_clr_prmry_normal_clr_prmry_drk_pressed_material</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_widget_eventSeeker_btn_alpha</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Widget.EventSeekr.ActionButton.Overflow" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/more</item>
    </style>

    <!-- ActionBar -->
	<style name="Widget.EventSeekr.ActionBar" parent="@style/Widget.AppCompat.ActionBar">
	    <item name="android:background">@android:color/white</item>
	    <item name="background">@android:color/white</item> 
	    <item name="android:titleTextStyle">@style/TextAppearance.EventSeekr.Widget.ActionBar.Title</item>
	    <item name="titleTextStyle">@style/TextAppearance.EventSeekr.Widget.ActionBar.Title</item>
	    <!-- <item name="android:backgroundStacked">@color/bg_bar_below_action_bar</item>
    	<item name="backgroundStacked">@color/bg_bar_below_action_bar</item>-->
	</style>
	
	<!-- Text style -->
	<style name="TextAppearance.EventSeekr.Widget.ActionBar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
	    <item name="android:textSize">@dimen/action_bar_title_txt_size</item>
	    <item name="android:textColor">@color/actionbar_title_color</item>
	</style>
	
	<!-- Custom actionbar tabs style -->
	<style name="CustomTabBar" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/tab_indicator_holo</item>
        <item name="android:textAppearance">@style/CustomTabBarTextAppearance</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/txt_size_btn_tab_bar_fragment_custom_tabs</item>
    </style>
    
	<style name="CustomTabBarTextAppearance" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">normal</item>
    </style>
	
    <style name="CustomListViewItemSelector">
        <item name="android:background">@drawable/slctr_bg_lst_off_transparent_on_dark_gray</item>
	</style>

   <!--  <style name="CustomProgressBar" parent="@style/Widget.ProgressBar">
		<item name="android:progressDrawable">@drawable/ic_progress_semi_circle</item>
    </style> -->
	
    <!-- Used this style at runtime for discover settings dialog font color. Without this, since we have overwritten
    textColorPrimary in application base theme to white color, texts in datepicker are not visible on same white background -->
    <style name="EventSeekr.Dialog.DatePicker" parent="@style/Theme.AppCompat.Light.NoActionBar">
		<item name="android:textColorPrimary">@android:color/black</item>
	</style>
	
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ starts for bosch ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
	<!-- Custom actionbar tabs style for bosch -->
	<style name="CustomTabBarBosch" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/tab_indicator_holo_bosch</item>
        <item name="android:textAppearance">@style/CustomTabBarTextAppearanceBosch</item>
    </style>
    
	<style name="CustomTabBarTextAppearanceBosch" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:textStyle">normal</item>
    </style>
    
	<!-- ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ ends for bosch ~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~ -->
	
</resources>