<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/rltContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/imgEvent"
            android:layout_width="@dimen/img_event_w_fragment_discover_by_category_list_item_evt"
            android:layout_height="@dimen/img_event_ht_fragment_discover_by_category_list_item_evt"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/img_event_margin_b_fragment_discover_by_category_list_item_evt"
            android:layout_marginLeft="@dimen/img_event_margin_l_fragment_discover_by_category_list_item_evt"
            android:layout_marginTop="@dimen/img_event_margin_t_fragment_discover_by_category_list_item_evt"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgEvent"
            android:layout_alignTop="@+id/imgEvent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/rlt_layout_evt_details_margin_l_fragment_discover_by_category_list_item_evt"
            android:layout_marginRight="@dimen/rlt_layout_evt_details_margin_r_fragment_discover_by_category_list_item_evt"
            android:layout_toRightOf="@id/imgEvent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/txtVenueTitle"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="Venue Name"
                android:textSize="@dimen/txt_evt_title_txt_size_include_evt_details"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVenueLocation"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_centerVertical="true"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="Location"
                android:textColor="@color/txt_evt_location_include_evt_details"
                android:textSize="@dimen/txt_evt_location_txt_size_include_evt_details" />

            <TextView
                android:id="@+id/txtVenueCity"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="City"
                android:textColor="@color/txt_evt_location_include_evt_details"
                android:textSize="@dimen/txt_evt_time_txt_size_include_evt_details" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_ht_fragment_discover_by_category_list_item_evt"
        android:layout_below="@id/rltContent"
        android:layout_marginLeft="@dimen/divider_margin_l_fragment_discover_by_category_list_item_evt"
        android:layout_marginRight="@dimen/divider_margin_r_fragment_discover_by_category_list_item_evt"
        android:background="@drawable/event_divide" />

</RelativeLayout>