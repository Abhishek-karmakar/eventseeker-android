<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/b_rlt_layout_root_pad_t_bosch_fragment_discover_by_category_list_item_evt" >
    
    <ImageView android:id="@+id/imgEvent"
        android:layout_width="@dimen/b_img_event_w_bosch_fragment_discover_by_category_list_item_evt"
        android:layout_height="@dimen/b_img_event_ht_bosch_fragment_discover_by_category_list_item_evt"
        android:layout_marginLeft="@dimen/b_img_event_margin_l_bosch_fragment_discover_by_category_list_item_evt"
        android:scaleType="fitXY"
        android:contentDescription="event image" />
    
    <LinearLayout android:id="@+id/lnrLayoutDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/imgEvent"
        android:layout_marginLeft="@dimen/b_lnr_layout_details_margin_l_bosch_fragment_discover_by_category_list_item_evt"
        android:layout_alignTop="@id/imgEvent"
        android:layout_alignBottom="@id/imgEvent"
        android:orientation="vertical" >
        
        <TextView android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Title"
            android:gravity="center_vertical"
            android:textSize="@dimen/b_txt_title_txt_size_bosch_fragment_discover_by_category_list_item_evt"
            android:maxLines="1"
            android:ellipsize="end" />
        
        <RelativeLayout android:id="@+id/rltLayoutVenue"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1" >
            
            <ImageView android:id="@+id/imgLoc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:src="@drawable/location"
                android:layout_centerVertical="true" />
            
            <TextView android:id="@+id/txtEvtLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imgLoc"
                android:text="Location"
                android:layout_centerVertical="true"
                android:maxLines="1"
            	android:ellipsize="end" />
            
        </RelativeLayout>
        
    </LinearLayout>
    
    <View android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/b_divider_ht_bosch_fragment_discover_by_category_list_item_evt"
        android:background="@android:color/black"
        android:layout_below="@id/imgEvent"
        android:layout_marginTop="@dimen/b_divider_margin_t_bosch_fragment_discover_by_category_list_item_evt" />
    
</RelativeLayout>