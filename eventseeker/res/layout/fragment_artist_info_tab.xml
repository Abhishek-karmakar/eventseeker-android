<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRltLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray" >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rltLayoutLoadedContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrlVContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:id="@+id/lnrLayoutRoot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- 1st row with image and Title Layout with social networking links -->

                <LinearLayout
                    android:id="@+id/lnrLayoutTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lnr_layout_top_margin_l_fragment_event_info"
                    android:layout_marginRight="@dimen/lnr_layout_top_margin_r_fragment_event_info"
                    android:background="@drawable/story_space"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <com.wcities.eventseeker.custom.view.ResizableImageView
                        android:id="@+id/imgItem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/img_evt_margin_fragment_event_info"
                        android:layout_weight="1"
                        android:contentDescription="artist image"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_launcher_d"
                        app:compressAsPerWidth="true" />
                    <!-- android:layout_marginRight="@dimen/rlt_layout_img_evt_margin_r_fragment_event_info" -->

                    <RelativeLayout
                        android:id="@+id/rltItemTitleAndSocialLinks"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/img_evt_margin_fragment_event_info"
                        android:layout_marginRight="@dimen/rlt_evt_info_margin_r_fragment_event_details_img_evt"
                        android:layout_marginTop="@dimen/rlt_item_title_and_social_links_margin_t_fragment_artist_info"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/txtItemTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:singleLine="true"
                            android:text="Artist Title"
                            android:textColor="@color/txt_evt_title_fragment_event_info_tab"
                            android:textSize="@dimen/txt_evt_title_txt_size_include_fragment_event_details_img_evt" />

                        <View
                            android:id="@+id/vDivider"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/v_divider_ht_fb_login"
                            android:layout_below="@id/txtItemTitle"
                            android:layout_marginBottom="@dimen/txt_margin_t_b_rlt_evt_info_fragment_event_details_img_evt"
                            android:layout_marginTop="@dimen/txt_margin_t_b_rlt_evt_info_fragment_event_details_img_evt"
                            android:background="@drawable/info_divider" />

                        <include
                            android:id="@+id/fragmentArtistDetailsFooter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true" />

                        <LinearLayout
                            android:id="@+id/lnrBtnSocialNetworkingLinks"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/fragmentArtistDetailsFooter"
                            android:layout_below="@+id/vDivider"
                            android:layout_marginBottom="@dimen/lnr_btn_social_networking_links_margin_t_b_fragment_artist_info"
                            android:layout_marginTop="@dimen/lnr_btn_social_networking_links_margin_t_b_fragment_artist_info"
                            android:orientation="horizontal" >

                            <ImageView
                                android:id="@+id/imgFacebook"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:scaleType="centerInside"
                                android:src="@drawable/facebook" />

                            <ImageView
                                android:id="@+id/imgTwitter"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:scaleType="centerInside"
                                android:src="@drawable/twitter" />

                            <ImageView
                                android:id="@+id/imgWeb"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center_vertical"
                                android:layout_weight="1"
                                android:scaleType="centerInside"
                                android:src="@drawable/web" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrVideos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lnr_event_desc_and_map_margin_l_r_fragment_event_info"
                    android:layout_marginRight="@dimen/lnr_event_desc_and_map_margin_l_r_fragment_event_info"
                    android:baselineAligned="false"
                    android:minHeight="@dimen/lnr_videos_min_ht_fragment_info_tab"
                    android:orientation="vertical" 
                    android:visibility="gone">

                    <include
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/rlt_desc_margin_r_include_desc"
                        android:layout_marginTop="@dimen/rlt_desc_margin_t_include_desc"
                        layout="@layout/include_desc_tab" />

                    <LinearLayout
                        android:id="@+id/rltLayoutVideos"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginLeft="@dimen/rlt_desc_margin_l_include_desc"
                        android:layout_marginTop="@dimen/rlt_desc_margin_t_include_desc"
                        android:layout_weight="1"
                        android:background="@drawable/story_space"
                        android:orientation="vertical"
                        android:paddingBottom="@dimen/txt_evt_desc_pad_b_fragment_evt_info"
                        android:paddingTop="@dimen/txt_evt_desc_pad_t_fragment_evt_info" >

                        <TextView
                            android:id="@+id/txtVideos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/txt_videos_margin_b_fragment_artist_info"
                            android:text="Videos"
                            android:textSize="@dimen/txt_videos_txt_size_fragment_artist_info" />

                        <com.scvngr.levelup.views.gallery.Gallery
                            android:id="@+id/glryVideo"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/img_video_ht_fragment_video" />
                        
                         <android.support.v4.view.ViewPager
							android:id="@+id/viewPager"
							android:layout_width="match_parent"
							android:layout_height="@dimen/img_video_ht_fragment_video"
							android:layout_marginLeft="@dimen/view_pager_margin_l_fragment_artist_info"
							android:layout_marginRight="@dimen/view_pager_margin_r_fragment_artist_info" 
							android:visibility="gone"/>
					    
					    <com.viewpagerindicator.CirclePageIndicator
					  		android:id="@+id/pageIndicator"
					  		android:paddingTop="@dimen/page_indicator_pad_fragment_artist_info"
					  		android:layout_height="wrap_content"
					  		android:layout_width="match_parent"
					 	 	app:radius="@dimen/page_indicator_radius_fragment_artist_info"
					  		app:fillColor="@color/font_blue"
					  		app:pageColor="@android:color/white"
					  		app:strokeColor="@color/font_blue"
					  		app:strokeWidth="@dimen/page_indicator_stroke_w_fragment_artist_info"
							android:visibility="gone"/>
                        
                    </LinearLayout>
                </LinearLayout>

                <include layout="@layout/include_friends_tab" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>