<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRltLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray" >

    <include
        android:id="@+id/lnrLayoutBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/lnr_layout_btns_margin_t_include_fragment_event_details_footer"
        layout="@layout/include_fragment_event_details_footer"
        android:visibility="gone" />

    <ScrollView
        android:id="@+id/scrlVArtistList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lnrLayoutBtns" >

        <LinearLayout
            android:id="@+id/lnrLayoutArtistList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="vertical" />
    </ScrollView>

</RelativeLayout>