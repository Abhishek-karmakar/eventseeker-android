<?xml version="1.0" encoding="utf-8"?>
<!-- added background color since otherwise removal (of existing fragment) & addition of this fragment on slow 
devices sometimes shows some other fragment available in backstack through this screen's default transparent background -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingTop="@dimen/common_t_mar_pad_for_all_layout" >
    
	<WebView android:id="@+id/webview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent" />
	
	<include layout="@layout/progress_bar_eventseeker_transparent" 
        android:id="@+id/rltProgressBar" />
	
</RelativeLayout>
