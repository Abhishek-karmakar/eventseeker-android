<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltRootLyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/lnrSearchLyt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/b_lnr_search_lyt_h_fragment_change_city"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/b_lnr_search_lyt_pad_fragment_change_city"
        android:paddingRight="@dimen/b_lnr_search_lyt_pad_fragment_change_city"
        android:paddingTop="@dimen/b_lnr_search_lyt_pad_fragment_change_city" >

        <ImageView
            android:id="@+id/btnSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/b_btn_margin_l_r_fragment_change_city"
            android:layout_weight="1"
            android:background="@drawable/slctr_bg_btn_blue_default_grey_pressed"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search_new" />

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:background="@drawable/bg_edt_search"
            android:hint="Search"
            android:imeOptions="actionSearch"
            android:paddingLeft="@dimen/b_edt_search_city_pad_l_r_fragment_change_city"
            android:paddingRight="@dimen/b_edt_search_city_pad_l_r_fragment_change_city"
            android:textColor="@color/eventseeker_bosch_theme_grey"
            android:textSize="@dimen/b_txt_size_fragment_bosch_change_city" />
    </LinearLayout>
</RelativeLayout>