<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">
    
    <com.wcities.eventseeker.custom.view.CategoryTitleLinearLayout 
        android:id="@+id/lnrLytRoot"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical"
	    android:gravity="center" 
	    android:background="@android:color/transparent">
	    
	    <TextView android:id="@+id/txtTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="@dimen/txt_title_txt_size_cat_titles"
	        android:text="AAAAAAAAA"
	        android:lines="2"
	        android:maxLines="2"
	        android:gravity="center" />
	    
	    <View android:id="@+id/vHorLine"
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/v_hor_line_ht_cat_titles"
	        android:background="@android:color/black"
	        android:visibility="invisible" />
	    
	</com.wcities.eventseeker.custom.view.CategoryTitleLinearLayout>
	
</LinearLayout>