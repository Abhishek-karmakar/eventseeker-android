<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/lnrFollowMoreArtist"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lnr_tabs_ht_fragment_following_tab"
        android:layout_alignParentTop="true"
        android:background="@android:color/white"
        android:elevation="@dimen/elevation_lnr_follow_more_artist_fragment_following_tab"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btnSyncAccounts"
            style="@style/Widget.EventSeeker.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/slctr_tabs_btn_sync_artists"
            android:paddingTop="@dimen/btn_tabs_pad_t_fragment_following_tab"
            android:text="@string/btn_sync_accounts"
            android:textAllCaps="false"
            android:textColor="@color/slctr_clr_primary_on_tabs_txt_clr_off"
            android:textSize="@dimen/btn_tabs_txt_size_fragment_following_tab" />

        <View
            android:layout_width="@dimen/v_divider_w_fragment_following_tab"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/v_divider_t_b_fragment_following_tab"
            android:layout_marginTop="@dimen/v_divider_t_b_fragment_following_tab"
            android:background="@color/tabs_seperator" />

        <Button
            android:id="@+id/btnPopularArtists"
            style="@style/Widget.EventSeeker.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/slctr_tabs_btn_poplar_artists"
            android:paddingTop="@dimen/btn_tabs_pad_t_fragment_following_tab"
            android:text="@string/btn_popular_artists"
            android:textAllCaps="false"
            android:textColor="@color/slctr_clr_primary_on_tabs_txt_clr_off"
            android:textSize="@dimen/btn_tabs_txt_size_fragment_following_tab" />

        <View
            android:layout_width="@dimen/v_divider_w_fragment_following_tab"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/v_divider_t_b_fragment_following_tab"
            android:layout_marginTop="@dimen/v_divider_t_b_fragment_following_tab"
            android:background="@color/tabs_seperator" />

        <Button
            android:id="@+id/btnRecommended"
            style="@style/Widget.EventSeeker.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/slctr_tabs_btn_recommended_artists"
            android:paddingTop="@dimen/btn_tabs_pad_t_fragment_following_tab"
            android:text="@string/btn_recommended"
            android:textAllCaps="false"
            android:textColor="@color/slctr_clr_primary_on_tabs_txt_clr_off"
            android:textSize="@dimen/btn_tabs_txt_size_fragment_following_tab" />

        <View
            android:layout_width="@dimen/v_divider_w_fragment_following_tab"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/v_divider_t_b_fragment_following_tab"
            android:layout_marginTop="@dimen/v_divider_t_b_fragment_following_tab"
            android:background="@color/tabs_seperator" />

        <Button
            android:id="@+id/btnSearch"
            style="@style/Widget.EventSeeker.Button.Transparent"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/slctr_tabs_btn_search_artists"
            android:paddingTop="@dimen/btn_tabs_pad_t_fragment_following_tab"
            android:text="@string/btn_search"
            android:textAllCaps="false"
            android:textColor="@color/slctr_clr_primary_on_tabs_txt_clr_off"
            android:textSize="@dimen/btn_tabs_txt_size_fragment_following_tab" />
    </LinearLayout>

    <View
        android:id="@+id/vShadow"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_shadow_h_fragment_following_tab"
        android:layout_below="@+id/lnrFollowMoreArtist"
        android:background="@drawable/bg_shadow" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lnrFollowMoreArtist"
        android:layout_marginTop="@dimen/grdv_following_margin_t_fragment_following_tab"
        android:background="@android:color/white"
        android:fillViewport="true"
        android:paddingTop="@dimen/common_t_mar_pad_for_all_layout" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/lnr_root_padding_fragment_follow_more_artists" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_nfl" >

                <Button
                    android:id="@+id/btnNFL"
                    style="@style/Widget.EventSeeker.Button.Transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_nfl" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_dummy_wt_ht_fragment_follow_more_artists"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_nba" >

                <Button
                    android:id="@+id/btnNBA"
                    style="@style/Widget.EventSeeker.Button.Transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_nba" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_dummy_wt_ht_fragment_follow_more_artists"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_nhl" >

                <Button
                    android:id="@+id/btnNHL"
                    style="@style/Widget.EventSeeker.Button.Transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_nhl" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_dummy_wt_ht_fragment_follow_more_artists"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mlb" >

                <Button
                    android:id="@+id/btnMLB"
                    style="@style/Widget.EventSeeker.Button.Transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_mlb" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/v_dummy_wt_ht_fragment_follow_more_artists"
                android:background="@android:color/transparent" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_mls" >

                <Button
                    android:id="@+id/btnMLS"
                    style="@style/Widget.EventSeeker.Button.Transparent"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/btn_mls" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>