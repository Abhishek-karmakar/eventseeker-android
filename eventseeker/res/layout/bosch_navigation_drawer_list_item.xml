<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    
    <RelativeLayout android:id="@+id/rltLayoutContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/b_rlt_layout_content_pad_vert_navigation_drawer_list_item"
        android:paddingBottom="@dimen/b_rlt_layout_content_pad_vert_navigation_drawer_list_item"
        android:layout_marginLeft="@dimen/b_rlt_layout_content_margin_l_navigation_drawer_list_item"
        android:gravity="center_vertical">
    
	    <ImageView android:id="@+id/imgIcon"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:contentDescription="icon" />    
	        
	    <TextView android:id="@+id/txtTitle"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/imgIcon"
	        android:layout_marginLeft="@dimen/b_txt_title_margin_l_navigation_drawer_list_item"
	        android:textSize="@dimen/b_txt_title_txt_size_navigation_drawer_list_item"
	        android:textColor="@android:color/white"
	        android:layout_centerVertical="true" />
	    
    </RelativeLayout>
    
    <View android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/b_divider_ht_navigation_drawer_list_item"
        android:layout_below="@id/rltLayoutContent"
        android:layout_marginLeft="@dimen/b_divider_margin_l_navigation_drawer_list_item"
        android:layout_marginRight="@dimen/b_divider_margin_r_navigation_drawer_list_item"
        android:background="@android:color/white" /> 
        
</RelativeLayout>
