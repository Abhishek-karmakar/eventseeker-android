<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rltRootLyt"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/eventseeker_bosch_theme_grey" >

    <LinearLayout 
        android:id="@+id/lnrRow"
        android:layout_width="match_parent" 
        android:layout_height="@dimen/b_rlt_root_lyt_h_bosch_navigation_drawer_list_item"
        android:orientation="horizontal" >
        
        <ImageView 
	        android:id="@+id/imgIcon"
        	android:layout_width="0dp" 
        	android:layout_height="match_parent" 
	        android:src="@drawable/ic_launcher"
        	android:layout_weight="0.2" 
        	android:scaleType="center"/>
    
	    <TextView
	        android:id="@+id/txtTitle"
	        android:layout_width="0dp"
	    	android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:padding="@dimen/b_txt_screen_title_pad_bosch_navigation_drawer_list_item"
	        android:layout_gravity="center_vertical"
	        android:textColor="@color/slctr_theme_blue_on_white_off"
        	android:layout_weight="0.8" />

    </LinearLayout>
    
    <View 
        android:id="@+id/vDivider"
        android:layout_width="match_parent" 
        android:layout_height="@dimen/b_v_divider_h_bosch_navigation_drawer_list_item"
        android:layout_marginLeft="@dimen/b_v_divider_margin_l_r_bosch_navigation_drawer_list_item"
        android:layout_marginRight="@dimen/b_v_divider_margin_l_r_bosch_navigation_drawer_list_item"
        android:background="@android:color/white" 
        android:layout_below="@+id/lnrRow" />
    
</RelativeLayout>
