<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/rlt_layout_root_pad_fragment_connect_accounts_list"
    android:background="@color/dark_gray" >

    <GridView
        android:id="@+id/grdFollowing"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/story_space"
        android:horizontalSpacing="@dimen/grd_following_hor_ver_spacing_fragment_following_tab"
        android:numColumns="3"
        android:verticalSpacing="@dimen/grd_following_hor_ver_spacing_fragment_following_tab"
        android:padding="@dimen/grd_following_pad_fragment_following_tab" >
    </GridView>
    
     <RelativeLayout android:id="@+id/rltDummyLyt" 
        android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/story_space"
	    android:visibility="gone">
    	
	    <TextView android:id="@+id/txtNoItemsFound"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:text="@string/no_artist_found"
		    android:gravity="top|center_horizontal" 
		    android:textSize="@dimen/txt_list_no_items_found_txt_size_list_no_items_found"
		    android:padding="@dimen/txt_list_no_items_found_margin_list_no_items_found"/>
	        
    </RelativeLayout>
    
	<include layout="@layout/include_no_items_found_with_action"
        android:visibility="gone"/>

</RelativeLayout>