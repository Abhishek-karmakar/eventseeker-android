<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltSyncAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/story_space" >

    <ImageView
        android:id="@+id/progressBar"
        android:layout_width="@dimen/img_progress_bar_size_fragment_sync_account"
        android:layout_height="@dimen/img_progress_bar_size_fragment_sync_account"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/img_progress_bar_mar_t_b_fragment_sync_account"
        android:layout_marginBottom="@dimen/img_progress_bar_mar_t_b_fragment_sync_account"
        android:src="@drawable/sync_big" />

	<RelativeLayout
        android:id="@+id/rltTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/progressBar" >

        <View
            android:id="@+id/vDummy"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_dummy_ht_fragment_sync_account"
            android:layout_centerInParent="true" />

        <TextView
            android:id="@+id/txtLoading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/vDummy"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Syncing Facebook"
            android:textColor="@color/darker_gray"
            android:textSize="@dimen/txt_sync_account_txt_size_fragment_sync_account" />

        <ImageView
            android:id="@+id/imgAccount"
            android:layout_width="@dimen/img_account_size_fragment_sync_account"
            android:layout_height="@dimen/img_account_size_fragment_sync_account"
            android:layout_below="@+id/vDummy"
            android:layout_centerHorizontal="true"
            android:src="@drawable/facebook_colored_big" />
    </RelativeLayout>

    <Button
        android:id="@+id/btnConnectOtherAccuonts"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/btn_connect_accounts_ht_fragment_sync_account"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/btn_continue_margin_b_fb_login"
        android:background="@color/btn_fb_sign_up_bg"
        android:paddingLeft="@dimen/btn_connect_other_account_pad_l_r_fragment_sync_account"
        android:paddingRight="@dimen/btn_connect_other_account_pad_l_r_fragment_sync_account"
        android:text="Connect Other Accounts"
        android:textColor="@android:color/white"
        android:textSize="@dimen/btn_connect_accounts_txt_size_fragment_sync_account" />

</RelativeLayout>