<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootRltLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray" >

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rltLayoutLoadedContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:id="@+id/scrlVContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/rootLnrLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/lnrLayoutTop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lnr_layout_top_margin_l_r_fragment_event_info"
                    android:layout_marginRight="@dimen/lnr_layout_top_margin_l_r_fragment_event_info"
                    android:background="@drawable/story_space"
                    android:baselineAligned="false"
                    android:orientation="horizontal" >

                    <com.wcities.eventseeker.custom.view.ResizableImageView
                        android:id="@+id/imgEvt"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/img_evt_margin_fragment_event_info"
                        android:layout_weight="1"
                        android:contentDescription="event image"
                        android:src="@drawable/ic_launcher"
                        android:scaleType="fitXY"  
                        app:compressAsPerWidth="true"/>

                    <RelativeLayout
                        android:id="@+id/rltLayoutEvtInfo"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="@dimen/rlt_evt_info_margin_t_b_fragment_event_details_img_evt"
                        android:layout_marginRight="@dimen/rlt_evt_info_margin_r_fragment_event_details_img_evt"
                        android:layout_marginTop="@dimen/rlt_evt_info_margin_t_b_fragment_event_details_img_evt"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/txtEvtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:layout_marginTop="@dimen/txt_margin_t_b_rlt_evt_info_fragment_event_details_img_evt"
                            android:singleLine="true"
                            android:textColor="@color/txt_evt_title_fragment_event_info_tab"
                            android:textSize="@dimen/txt_evt_title_txt_size_include_fragment_event_details_img_evt" />

						 <RelativeLayout
                            android:id="@+id/rltLayoutVenueInfo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_above="@+id/txtVenue"
                            android:layout_below="@+id/txtEvtTitle" >

                            <View
                                android:id="@+id/vDivider"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/v_divider_ht_fb_login"
                                android:layout_centerVertical="true"
                                android:background="@drawable/info_divider" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/txtVenue"
                            style="@style/SingleLineMarqueeTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
							android:layout_above="@+id/vEmpty"
                            android:layout_marginBottom="@dimen/txt_margin_t_b_rlt_evt_info_fragment_event_details_img_evt"
                            android:drawableLeft="@drawable/location"
                            android:drawablePadding="@dimen/txt_drawable_pad_fragment_event_details_img_evt"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/txt_evt_title_fragment_event_info_tab"
                            android:textSize="@dimen/txt_evt_time_txt_size_include_fragment_event_details_img_evt" />
                        
                        <View
                            android:id="@+id/vEmpty"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_centerVertical="true" />
                            
                        <TextView
                            android:id="@+id/txtEvtTime"
                            style="@style/SingleLineMarqueeTxt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
							android:layout_below="@+id/vEmpty"
                            android:layout_above="@+id/rltFooter"
                            android:layout_marginBottom="@dimen/txt_margin_t_b_rlt_evt_info_fragment_event_details_img_evt"
                            android:drawableLeft="@drawable/calendar"
                            android:drawablePadding="@dimen/txt_drawable_pad_fragment_event_details_img_evt"
                            android:gravity="center_vertical"
                            android:maxLines="2"
                            android:textColor="@color/txt_evt_title_fragment_event_info_tab"
                            android:textSize="@dimen/txt_evt_time_txt_size_include_fragment_event_details_img_evt" />

                        <include
                            android:id="@+id/rltFooter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            layout="@layout/include_fragment_event_details_footer_tab" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lnrEventDescAndMap"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/lnr_event_desc_and_map_margin_l_r_fragment_event_info"
                    android:layout_marginRight="@dimen/lnr_event_desc_and_map_margin_l_r_fragment_event_info"
                    android:orientation="horizontal" >

                    <include layout="@layout/include_desc" />

                    <include layout="@layout/include_address_map" />
                </LinearLayout>

                <include layout="@layout/include_friends" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>

</RelativeLayout>