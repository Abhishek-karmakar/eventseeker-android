<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutDesc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/story_space" >

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:paddingTop="@dimen/txt_evt_desc_pad_t_fragment_evt_info"
        android:textSize="@dimen/txt_evt_desc_txt_size_fragment_evt_info" />

    <ImageView
        android:id="@+id/imgDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/txtDesc"
        android:layout_marginBottom="@dimen/img_down_margin_b_fragment_event_info"
        android:src="@drawable/down" />

</RelativeLayout>