<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    
	<com.wcities.eventseeker.custom.view.RelativeLayoutCenterScale 
	    android:id="@+id/rltLytRoot"
	    android:layout_width="@dimen/rlt_lyt_root_w_video"
	    android:layout_height="match_parent"
	    android:layout_gravity="center" >
	    
	    <ImageView android:id="@+id/imgVideo"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:background="@android:color/darker_gray"
	        android:scaleType="fitXY"
	        android:contentDescription="video image" />
	    
		<ImageView android:id="@+id/imgPlay"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerInParent="true"
			android:src="@drawable/play_small" />
			
	</com.wcities.eventseeker.custom.view.RelativeLayoutCenterScale>

</LinearLayout>
