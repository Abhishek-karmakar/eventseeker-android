<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray"
    android:fillViewport="true"
    android:padding="@dimen/rlt_layout_root_pad_fragment_connect_accounts_list" >

    <RelativeLayout
        android:id="@+id/rltLytRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/story_space"
        android:gravity="center"
        android:paddingBottom="@dimen/rlt_lyt_root_pad_l_r_b_get_started"
        android:paddingLeft="@dimen/rlt_lyt_root_pad_l_r_b_get_started"
        android:paddingRight="@dimen/rlt_lyt_root_pad_l_r_b_get_started" >

        <ImageView
            android:id="@+id/imgFbSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/all_components_margin_t_get_started"
            android:src="@drawable/fb_login" />

        <RelativeLayout
            android:id="@+id/rltGPlus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgFbSignUp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/all_components_margin_t_get_started" >

            <TextView
                android:id="@+id/txtGPlusSignInStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="Signing in..."
                android:textSize="@dimen/txt_g_plus_sign_in_status_txt_size_get_started" />

            <ImageView
                android:id="@+id/imgGPlusSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/g_plus_sign_in" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/rltGPlus"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp" >

            <TextView
                android:id="@+id/txtLoginLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="center"
                android:text="Sign Up with Email"
                android:textColor="@color/font_blue"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtFN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtLoginLabel"
                android:layout_marginTop="20dp"
                android:hint="First Name" />

            <EditText
                android:id="@+id/edtLN"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtFN"
                android:layout_marginTop="20dp"
                android:hint="Last Name" />

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtLN"
                android:layout_marginTop="20dp"
                android:hint="Email" />

            <EditText
                android:id="@+id/edtPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtEmail"
                android:layout_marginTop="20dp"
                android:hint="Password"
                android:password="true" />

            <EditText
                android:id="@+id/edtReEnterPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtPassword"
                android:layout_marginTop="20dp"
                android:hint="Re-Enter Password"
                android:password="true" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_default_ht"
                android:layout_below="@+id/edtReEnterPassword"
                android:layout_marginTop="20dp"
                android:background="@drawable/slctr_btn_login_default_grey_pressed_blue_rounded"
                android:gravity="center"
                android:text="Sign Up"
                android:textColor="@android:color/white" />
            <!-- android:enabled="false" -->
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>