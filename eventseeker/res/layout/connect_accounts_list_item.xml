<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltLayoutRoot"
    android:layout_width="match_parent"
    android:layout_height="@dimen/rlt_layout_root_ht_connect_accounts_list_item"
    android:paddingLeft="@dimen/rlt_layout_root_pad_l_connect_accounts_list_item"
    android:paddingRight="@dimen/rlt_layout_root_pad_r_connect_accounts_list_item" >
    
    <RelativeLayout android:id="@+id/rltLayoutServiceDetails"
        android:layout_width="match_parent"
        android:layout_height="@dimen/rlt_layout_service_details_ht_connect_accounts_list_item"
        android:layout_marginLeft="@dimen/img_service_margin_l_r_connect_accounts_list_item"
        android:layout_marginRight="@dimen/img_service_margin_l_r_connect_accounts_list_item"
        android:gravity="center_vertical" >
    
	    <ImageView android:id="@+id/imgService"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:contentDescription="service image"
	        android:src="@drawable/facebook_colored"
	        android:layout_centerVertical="true" />
	    
	    <TextView android:id="@+id/txtServiceName"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_toRightOf="@id/imgService"
	        android:layout_marginLeft="@dimen/txt_service_name_margin_l_connect_accounts_list_item"
	        android:text="Facebook"
	        android:textColor="@color/txt_service_name_txt_color"
	        android:textSize="@dimen/rlt_layout_service_details_txt_size_connect_accounts_list_item"
	        android:layout_centerVertical="true" />
	    
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
			android:layout_centerVertical="true"
	        android:layout_marginRight="@dimen/img_plus_margin_r_connect_accounts_list_item" >
		
			<ImageView
                android:id="@+id/imgPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:contentDescription="plus image"
                android:src="@drawable/plus" />

            <TextView
                android:id="@+id/txtCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="13"
                android:textColor="@color/font_blue"
                android:textSize="@dimen/rlt_layout_service_details_txt_size_connect_accounts_list_item" />

            <ImageView
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/refresh_smaller" />
		</RelativeLayout>
    </RelativeLayout>
    
    <View android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_ht_connect_accounts_list_item"
        android:background="@drawable/side_nav_topic_divider"
        android:layout_below="@id/rltLayoutServiceDetails" />

</RelativeLayout>
