<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRltLayout"
  	android:layout_width="match_parent"
  	android:layout_height="wrap_content" >
  
  	<ImageView android:id="@+id/imgCategory"
    	android:layout_width="match_parent"
    	android:layout_height="@dimen/img_category_ht_grid_category"
    	android:scaleType="centerCrop" />
  
	<TextView android:id="@+id/txtCategory"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_alignParentBottom="true"
	    android:gravity="center_vertical"
	    android:textColor="@android:color/white"
	    style="@style/SingleLineMarqueeTxt"
	    android:paddingTop="@dimen/txt_category_pad_t_grid_category"
	    android:paddingBottom="@dimen/txt_category_pad_b_grid_category"
	    android:paddingLeft="@dimen/txt_category_pad_l_grid_category"
	    android:background="@color/bg_black_transparent_strip" />

</RelativeLayout>