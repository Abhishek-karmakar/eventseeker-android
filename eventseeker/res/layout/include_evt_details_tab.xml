<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrLayoutEvtDetails"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical" >

    <LinearLayout
        android:id="@+id/lnrLayoutEvtTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgEvtTitle"
            android:layout_width="@dimen/img_evt_location_w_include_evt_details"
            android:layout_height="@dimen/img_evt_location_ht_include_evt_details"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txtEvtTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_evt_title_margin_l_include_evt_details"
            android:ellipsize="end"
            android:lines="2"
            android:text="Event Name"
            android:textSize="@dimen/txt_evt_title_txt_size_include_evt_details"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLayoutEvtLocation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrLayoutEvtTitle"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgEvtLocation"
            android:layout_width="@dimen/img_evt_location_w_include_evt_details"
            android:layout_height="@dimen/img_evt_location_ht_include_evt_details"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/img_evt_location_margin_t_include_evt_details"
            android:src="@drawable/location" />

        <TextView
            android:id="@+id/txtEvtLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_evt_location_margin_l_include_evt_details"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="Location"
            android:textColor="@color/txt_evt_location_include_evt_details"
            android:textSize="@dimen/txt_evt_location_txt_size_include_evt_details" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lnrLayoutEvtTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lnrLayoutEvtLocation"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgEvtTime"
            android:layout_width="@dimen/img_evt_location_w_include_evt_details"
            android:layout_height="@dimen/img_evt_location_ht_include_evt_details"
            android:layout_gravity="center_vertical"
            android:src="@drawable/time" />

        <TextView
            android:id="@+id/txtEvtTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/txt_evt_location_margin_l_include_evt_details"
            android:gravity="center_vertical"
            android:text="Time"
            android:textColor="@color/txt_evt_location_include_evt_details"
            android:textSize="@dimen/txt_evt_time_txt_size_include_evt_details" />

        <TextView
            android:id="@+id/txtEvtTimeAMPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="AM"
            android:textColor="@color/txt_evt_location_include_evt_details"
            android:textSize="@dimen/txt_evt_time_am_pm_txt_size_include_evt_details" />
    </LinearLayout>

</RelativeLayout>