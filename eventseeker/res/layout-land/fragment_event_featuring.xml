<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootRltLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_gray" >
    
    <include layout="@layout/include_fragment_event_details_footer"
        android:id="@+id/lnrLayoutBtns"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/include_fragment_event_details_footer_margin_t_fragment_event_featuring" />
    
    <ScrollView android:id="@+id/scrlVArtistList"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
	    android:layout_above="@id/lnrLayoutBtns" >
    	
	    <LinearLayout android:id="@+id/lnrLayoutArtistList"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@android:color/white"
	        android:layout_marginLeft="@dimen/lnr_layout_artist_list_margin_l_fragment_event_featuring"
	        android:layout_marginRight="@dimen/lnr_layout_artist_list_margin_r_fragment_event_featuring" />
	    
    </ScrollView>
    
</RelativeLayout>

